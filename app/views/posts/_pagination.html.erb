<% last_page_index = (locals[:posts].size.to_f/locals[:posts_per_page].to_f).ceil%>
<% if last_page_index > 5%>
  <ul class="pagination">
      <% page_i = locals[:page_index].to_i %>
      <li>
        <% if locals[:search] %>
          <%= link_to page_i == 1 ? " | " : "<<", posts_search_path(page_index: page_i == 1 ? 1 : page_i-1, search: locals[:search]) %>
        <% else %>
          <%= link_to page_i == 1 ? " | " : "<<", posts_path(page_index: page_i == 1 ? 1 : page_i-1) %>
        <% end %>
      </li >
      <% if page_i==1 %>
        <% 5.times do |i| %>
          <li <%= "class=active" if i==page_i-1%>>
          <% if locals[:search] %>
            <%= link_to(page_i+i, posts_search_path(page_index: page_i+i, search: locals[:search])) %>
          <% else %>
              <%= link_to(page_i+i, posts_path(page_index: page_i+i)) %>
          <% end %>
          </li>
        <% end %>
      <% elsif page_i==2 %>
        <% 5.times do |i| %>
          <li <%= "class=active" if i==page_i-1%>>
            <% if locals[:search] %>
            <%= link_to(page_i-1+i, posts_search_path(page_index: page_i-1+i, search: locals[:search])) %>
            <% else %>
              <%= link_to(page_i-1+i, posts_path(page_index: page_i-1+i)) %>
            <% end %>
          </li>
        <% end %>
      <% elsif page_i==(last_page_index) %>
        <% 5.times do |i| %>
          <li <%= "class=active" if (page_i-4+i)==(last_page_index)%>>
            <% if locals[:search] %>
              <%= link_to(page_i-4+i, posts_search_path(page_index: page_i-4+i, search: locals[:search])) %>
            <% else %>
              <%= link_to(page_i-4+i, posts_path(page_index: page_i-4+i)) %>
            <% end %>
          </li>
        <% end %>
      <% elsif page_i==(last_page_index-1) %>
        <% 5.times do |i| %>
          <li <%= "class=active" if (page_i-3+i)==(last_page_index-1)%>>
            <% if locals[:search] %>
              <%= link_to(page_i-3+i, posts_search_path(page_index: page_i-3+i), search: locals[:search]) %>
            <% else %>
              <%= link_to(page_i-3+i, posts_path(page_index: page_i-3+i)) %>
            <% end %>
          </li>
        <% end %>
      <% else %>
        <% 5.times do |i| %>
          <li <%= "class=active" if i==2%>>
            <% if locals[:search] %>
              <%= link_to(page_i-2+i, posts_search_path(page_index: page_i-2+i, search: locals[:search])) %>
            <% else %>
              <%= link_to(page_i-2+i, posts_path(page_index: page_i-2+i)) %>
            <% end %>
          </li>
        <% end %>
      <% end %>
      <li>
        <% if locals[:search] %>
          <%= link_to page_i == last_page_index ? " | " : ">>", posts_search_path(page_index: page_i == last_page_index ? last_page_index : page_i+1, search: locals[:search]) %>
        <% else %>
          <%= link_to page_i == last_page_index ? " | " : ">>", posts_path(page_index: page_i == last_page_index ? last_page_index : page_i+1) %>
        <% end %>
      </li>
    </ul>
<% elsif last_page_index == 1%>
<!--#no need for pagination, everything fits one page  -->
<% else %>
  <ul class="pagination">
    <% page_i = locals[:page_index].to_i %>
    <% last_page_index.times do |i| %>
      <li <%= "class=active" if i==page_i-1%>>
        <% if locals[:search] %>
          <%= link_to(i+1, posts_search_path(page_index: i+1, search: locals[:search])) %>
        <% else %>
          <%= link_to(i+1, posts_path(page_index: i+1)) %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
