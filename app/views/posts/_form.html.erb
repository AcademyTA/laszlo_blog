<div class="indie-flower">
  <%= @post.errors.messages.values.join(", ") %>
</div>


<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "indie-flower" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body, class: "indie-flower" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-default indie-flower"%>
<% end %>
