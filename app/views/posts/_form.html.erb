<div class="indie-flower">
  <%= @post.errors.messages.values.join(", ") %>
</div>

<div class="indie-flower">

  <%= simple_form_for @post do |f| %>
    <%= f.input :title, placeholder: "Title of the post...", class: "indie-flower" %>
    <%= f.input :body, hint: "Put the post body here.", class: "indie-flower" %>
    <%= f.input :image %>
    <%= f.association :tags, as: :check_boxes %>
    <%= f.submit "Submit", class: "btn btn-default indie-flower"%>
  <% end %>
</div>
