<h1>Show Post</h1>
<div class="">
  <h2><%= @post.title %> </h2>
</div>
<div class="">
  <p>
    <%= @post.body %>
  </p>
  <%= link_to "edit", edit_post_path(@post) %>
  <%= link_to "delete", post_path(@post), {method: :delete,
                                          data: {confirm: "Are you sure!"}} %>
</div>
