<div class="bangers">Sign Up</div>

<div class="indie-flower">
    <%= @user.errors.full_messages.join(", ") %>
</div>

<div class="indie-flower">

  <%= simple_form_for @user do |f| %>

    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.submit "Sign Up", class: "btn btn-default" %>

  <% end %>
</div>
